<div class="banner"
    style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('background.jpg') %>);">
    <div class="banner-content">
      <h1>Saunas, anywhere</h1>
      <%= render 'search_form', sauna: @sauna %>
    </div>
</div>

<div class="container">
    <h2>Explore all Saunas</h2>
      <div class="grid-container">
        <% @saunas.each do |s| %>
          <div class="grid-item-card">
            <%= cl_image_tag s.photo %>
            <div class="card-caption"></div>

            <h4><%= link_to s.title, sauna_path(s) %></h4>
              <p><em><%= s.address %></em></p>
              <p><%= s.sq_meter%><strong>mÂ²</strong> <i class="fa fa-user"></i> <%= s.capacity %> <i class="fas fa-dollar-sign"></i><%= s.price %>/night </></p>
            </div>
            <% end %>
          </div>
      </div>
  </div>



