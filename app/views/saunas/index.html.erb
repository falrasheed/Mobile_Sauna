<div class="main-container">
  <div class="map_layout">
    <h2>Explore all Saunas</h2>
      <div class="grid-container">
        <% @saunas.each do |s| %>
          <div class="grid-item-card">
            <%= cl_image_tag s.photo %>
            <div class="card-caption"></div>
            <h4><%= link_to s.title, sauna_path(s) %></h4>
              <p><i class="fas fa-dollar-sign"></i><%= s.price %>/night </><i class="fas fa-user-friends"></i> <%= s.capacity %></p>
            </div>
            <% end %>
          </div>
      </div>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
