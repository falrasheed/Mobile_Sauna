<div class="container">
  <h2>Explore all Saunas</h2>
    <div class="grid-container">
      <% @saunas.each do |s| %>
        <div class="grid-item-card">
          <%= cl_image_tag s.photo %>
          <div class="card-caption"></div>
          <h6><%= link_to s.description, sauna_path(s) %></h6>
            <p><i class="fas fa-dollar-sign"></i><%= s.price %>/night</p><p><i class="fas fa-user-friends"></i><%= s.capacity %></p>
          </div>
        <% end %>
        </div>
    </div>
</div>
