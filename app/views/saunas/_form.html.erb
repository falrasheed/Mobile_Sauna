<div class="container-new-sauna-form">
  <%= simple_form_for(@sauna) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :address %>
    </div>
    <div class="form-inputs">
      <%= f.input :title %>
    </div>
    <div class="form-inputs">
      <%= f.input :description %>
    </div>
    <div class="form-inputs">
      <%= f.input :capacity, collection: 1..16, prompt: "Guests", selected: 1 %>
    </div>
    <div class="form-inputs">
      <%= f.input :price %>
    </div>
    <div class="form-inputs">
      <%= f.input :photo, input_html: { class: 'hidden' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-submit" %>
    </div>
  <% end %>
</div>



