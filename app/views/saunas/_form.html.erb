<div class="container mt-5">
  <%= simple_form_for(@sauna) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :address %>
    </div>
    <div class="form-inputs">
      <%= f.input :title %>
    </div>
    <div class="form-inputs">
      <%= f.input :description %>
    </div>
    <div class="form-inputs">
      <%= f.input :capacity, collection: 1..16, prompt: "Guests", selected: 1 %>
    </div>
    <div class="form-inputs">
      <%= f.input :price %>
    </div>
    <div class="form-inputs">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
    <div class="form-inputs">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-inputs">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
